<!-- Es un script que muestra un mensaje en caso de existir -->
<!-- Recibe un json con la llave error y success, cada uno de ellos
a un mensaje de advertencia -->
<script type="text/javascript">
    <% if ( typeof error !== 'undefined' && error.length > 0 ) { %>
        var error = "<%= error %>";
    <% } else { %>
        var error = false;
    <% } %>

    <% if ( typeof success !== 'undefined' && success.length > 0 ) { %>
        var success = "<%= success %>";
    <% } else { %>
        var success = false;
    <% } %>

    $(document).ready(function(){
        if(success){
            toastr(success);
        }

        if(error){
            toastr(error);
        }
    });
</script>