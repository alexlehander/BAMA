<html lang="es">
<!-- Vista para el inicio de sesiÃ³n -->
    <head>
         <meta charset="UTF-8">
         <title>Administradores</title>

        <% include ../../layouts/header %>

    </head>

    <body class="bg-light">
        <% include ../../layouts/nav %>
        <% include ../../layouts/title %>
        <div class="container">
            <div class="row" style="margin-top: 50px;">
                <div class="col-12">
                    <div class="card col-6 col-lg-10 offset-lg-1 offset-3 bg-principal text-white">
                        <div class="card-header"><h3 class="text-accent">Administradores</h3></div>
                        <div class="card-body">
                            <a href="/administradores/registrar" class="btn btn-principal">Registrar administrador</a>
                            <table class="table">
                                <thead>
                                    <th>Usuario</th>
                                    <th></th>
                                </thead>
                                <tbody>
                                    <% users.forEach(function(user) { %>
                                    <tr>
                                        <td><%= user.username %></td>
                                        <td>
                                            <% if (['admin', 'manuel'].indexOf(username) >= 0 && ['admin', 'manuel'].indexOf(user.username) < 0) { %>
                                            <form action="<%= '/administradores/borrar/' + user._id %>" method="POST">
                                                <button class="btn btn-danger">Eliminar</button>
                                            </form>
                                            <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script type="text/javascript">
            $(document).ready(function() {
                if(error){
                    toastr(error);
                }
            })
        </script>
    </body>

</html>
