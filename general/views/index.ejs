<html lang="es">
    <head>
         <meta charset="UTF-8"> 
         <title>Inicial</title>

        <% include layouts/header %>
    </head>

    <body class="bg-light text-dark">
        <% include layouts/nav %>

        <div class="container-fluid">
            
            <div class="row" style="margin-top: 20px">
                <div class="col-12">
                    <h1 class="text-center">Pacientes</h1>
                </div>
            </div>
            
            <div class="row">
                <div class="col-10">
                    <h3><b class="text-info">Paciente actual: </b><span id="paciente_actual"></span></h3>
                </div>
            </div>

            <div class="row" style="margin-top: 20px">
                <div class="col-12">
                    <div class="card text-white bg-dark mb-3">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-3 text-center">
                                    <h3 class="text-info">Lista de pacientes</h3>
                                </div>
                                <div class="col-6 text-center">
                                    <input class="form-control" type="text" name="buscar" id="buscar" placeholder="Buscar" />
                                </div>
                                <div class="col-3 text-center">
                                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modal">Agregar paciente</button>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-12">
                                    <table class="table text-center text-white" id="pacientes">
                                        <thead>
                                            <th>Nombre</th>
                                            <th>Apellido Paterno</th>
                                            <th>Apellido Materno</th>
                                            <th>Acción</th>
                                        </thead>
                                        <tbody>
                                            
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div id="modal" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h3 class="modal-title">Agregar Paciente</h3>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        
                        <div class="modal-body">
                            <form class="form" id="target" method="POST" enctype='application/json' action="/paciente/agregar">

                                <div class="form-group">
                                    <input class="form-control" id="noExpediente" type="text" name="data[noExpediente]" placeholder="Número de expediente" required minlength="2">
                                </div>
                                
                                <div class="form-group">
                                    <input class="form-control" id="nombre" type="text" name="data[nombre]" placeholder="Nombre" required minlength="2">
                                </div>
                                
                                <div class="form-group">
                                    <input class="form-control" id="aPaterno" type="text" name="data[aPaterno]" placeholder="Apellido Paterno" required minlength="2">
                                </div>
                                
                                <div class="form-group">
                                    <input class="form-control" id="aMaterno" type="text" name="data[aMaterno]" placeholder="Apellido Materno" required minlength="2">
                                </div>

                                <div class="form-group">
                                    <label for="datepicker">Fecha de Nacimiento</label>
                                    <input id="datepicker" class="form-control" type="text" name="data[fechaNacimiento]" required>
                                </div>
                                

                                <div class="form-group">
                                    <button class="btn btn-primary" id="guardar" type="submit">Guardar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <script type="text/javascript" src="/general/js/user/perfil.js"></script>
        <script type="text/javascript" src="/general/js/main.js"></script>
    </body>
</html>